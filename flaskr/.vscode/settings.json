{
    "git.enableSmartCommit": true,
    "git.autofetch": true,

    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "editor.formatOnSave": true
    },
    "black-formatter.args": [
        "--line-length",
        "120"
    ],
    "isort.args": [
        "--profile=black"
    ],
    "flake8.args": [
        "--max-line-length",
        "120",
        "--ignore",
        "F401,W503,W291",

    ],
    "files.autoSave": "afterDelay",
}